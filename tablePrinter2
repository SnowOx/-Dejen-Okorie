# tablePrinter2.py - #Attempt 4. Success :)

tableData = [['apples', 'oranges', 'cherries', 'banana'],
             ['Alice', 'Bob', 'Carol', 'David'],
             ['dogs', 'cats', 'moose', 'goose']]

print('Intial tableData contents: \n' + str(tableData) + '\n\n')

def printTable():

    # Find the longest word. This will be used for calculating the appropriate spacing
    longestWidth = 0
    for wordList in tableData:
        for word in wordList:
            if len(word) > longestWidth:
                longestWidth = len(word)

    tableDataLength = len(tableData)
    print('tableData length = ', str(tableDataLength))

    # Transpose the rows and colums
    transposed = []
    for i in range(0, (len(tableData)+1)):
        transposed.append([row[i] for row in tableData])
            
    # Print the newly ordered list with rjust spacing
    colWidth = (longestWidth + 1)
    for i in range(len(transposed)):    
        line = transposed[i]
        for word in line:
            spacing = colWidth 
            print(word.rjust(spacing), end='')
        print()

printTable()


# Solved! This was a highly enjoyable challenge.
